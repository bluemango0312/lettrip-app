<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelerApplication" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="CalendarViewCustomTheme" parent="Theme.AppCompat.Light">
        <item name="android:dateTextAppearance">@style/CalendarViewCustomTextAppearance</item>
    </style>

    <style name="CalendarViewCustomTextAppearance">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">#FFFFFF</item>
    </style>


</resources>