<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"

    android:layout_marginBottom="15dp"
    android:background="@drawable/search_item"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_travel_theme"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:background="@drawable/search_theme"
            android:gravity="center"
            android:padding="5dp"
            android:text="문화여행"
            android:textColor="#93BEFF " />

        <TextView
            android:id="@+id/textView_city"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/search_city"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="부산" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_total_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="100,000원"
                android:textColor="#838383 "
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_delete_travel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="delete"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/courseNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginRight="32dp"
                android:text="4"
                android:textColor="#93BEFF " />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:lines="2"
            android:padding="5dp"
            android:text="경상감영공원 - 고영희식당 - 팔공산떡볶이"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>