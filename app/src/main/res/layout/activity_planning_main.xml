<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plainText_planTitle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/searchBtn"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/search" />

        <View
            android:id="@+id/view6"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/logoBtn"
            android:layout_width="39dp"
            android:layout_height="33.3dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo" />

        <View
            android:id="@+id/view7"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/bellBtn"
            android:layout_width="20dp"
            android:layout_height="24.7dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bell" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView_planTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="46dp"
            android:layout_marginRight="29dp"
            android:fontFamily="@font/inter_bold"
            android:text="여행 계획하기"
            android:textColor="#4F5A80"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:hint="Planning Title"
            android:inputType="text"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="33dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/cityBtn1"
                    android:layout_width="105dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/planning_city1"
                    android:fontFamily="@font/inter"
                    android:gravity="center|clip_vertical"
                    android:scaleType="fitCenter"
                    android:text="행정구역"
                    android:textColor="#BBBBBB"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/cityBtn2"
                    android:layout_width="105dp"
                    android:layout_height="37dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/planning_city1"
                    android:fontFamily="@font/inter"
                    android:scaleType="fitCenter"
                    android:text="지역이름"
                    android:textColor="#BBBBBB"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/dateBtn"
                    android:layout_width="145dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:background="@drawable/planning_date_box"
                    android:fontFamily="@font/inter"
                    android:scaleType="fitCenter"
                    android:text="여행날짜"
                    android:textColor="#BBBBBB"
                    android:textSize="13sp" />
            </LinearLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="예상 비용 : "
                android:textSize="13sp" />

            <EditText
                android:id="@+id/plainText_price"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#BBBBBB"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="100,000원"
                android:inputType="text"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="33dp" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="@dimen/design_fab_size_normal"
        android:layout_height="@dimen/design_fab_size_normal"
        android:layout_gravity="end"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="17dp"
        android:clickable="true"
        android:elevation="0dp"
        app:backgroundTint="@android:color/white"
        app:fabSize="normal"
        app:srcCompat="@drawable/floating_icon" />

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="22.5dp"
            android:layout_height="25dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bottombar_mission_icon" />

        <View
            android:id="@+id/view8"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bottombar_community_icon" />

        <View
            android:id="@+id/view9"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bottombar_record_icon" />

        <View
            android:id="@+id/view10"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bottombar_chat_icon" />

        <View
            android:id="@+id/view11"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bottombar_mypage_icon" />
    </LinearLayout>

</LinearLayout>