<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="27dp"
    android:layout_marginRight="27dp"
    android:layout_marginBottom="21dp"
    android:background="@drawable/poke_background_custom"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="22dp"
    android:paddingRight="23dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/meetup_profile_round"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="박성화 (떵)"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/userSex"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        app:srcCompat="@drawable/man_icon" />

                    <TextView
                        android:id="@+id/userBirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter"
                        android:text="1998.04.03"
                        android:textColor="#C0C0C0"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/meetupSuccessNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="7dp"
                        android:fontFamily="@font/inter"
                        android:text="매칭 완료 2회"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/meetupFailNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text="매칭 실패 0회"
                        android:textSize="9sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/oneLineReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/poke_list_one_line_review"
            android:fadeScrollbars="true"
            android:fontFamily="@font/inter"
            android:maxLines="1"
            android:paddingLeft="23dp"
            android:paddingTop="21dp"
            android:paddingRight="23dp"
            android:paddingBottom="21dp"
            android:scrollbarSize="2dp"
            android:scrollbars="horizontal"
            android:text="한 줄 리뷰 입니다ㅏㅏㅏㅏㅏㅏㅏㅏㅏㅏㅏㅏㅏㅏㅏㅏㅏㅏㅏ"
            android:textSize="11sp" />

        <Button
            android:id="@+id/acceptBtn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/poke_list_round_btn"
            android:fontFamily="@font/inter_semibold"
            android:text="수락"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>