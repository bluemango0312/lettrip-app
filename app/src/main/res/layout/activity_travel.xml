<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".travel.TravelActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="여행 날짜"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:popupBackground="@color/white"
            android:entries="@array/my_array_state" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:popupBackground="@color/white"
            android:backgroundTint="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_travel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="총 날짜:"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editText_departdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="20230501"
                android:inputType="date"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="~"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/editText_lastdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="20230503"
                android:inputType="date"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />
        </LinearLayout>

        <Button
            android:id="@+id/button_travel_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:text="TRAVEL UPLOAD" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="지역 날짜:"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editText_departdate_region"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="20230501"
                android:inputType="date"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="~"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/editText_lastdate_region"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="20230503"
                android:inputType="date"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

        </LinearLayout>

        <Button
            android:id="@+id/button_travel_region_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRAVEL REGION UPLOAD" />

    </LinearLayout>

    <Button
        android:id="@+id/button_add_cource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD PLACE"
        android:visibility="invisible" />

</LinearLayout>