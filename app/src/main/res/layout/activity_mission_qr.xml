<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="20dp"
    android:paddingRight="24dp"
    android:paddingBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/leftArrowBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/white"
            android:foregroundGravity="left"
            app:srcCompat="@drawable/left_arrow2" />

        <TextView
            android:id="@+id/missionPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="137dp"
            android:gravity="center"
            android:text="QR 미션"
            android:textColor="#4F5A80 "
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qr_big_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            app:srcCompat="@drawable/qr_big_pic" />

        <TextView
            android:id="@+id/difficulty_TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:background="@drawable/mission_difficulty"
            android:gravity="center"
            android:text="난이도 중"
            android:textColor="#0085FF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tripMissionTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:text="QR 인증 미션"
            android:textColor="#4F5A80"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointTextView2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="700P"
            android:textColor="#FFC700 "
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/explanation_Title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="35dp"
            android:text="미션 설명"
            android:textColor="#3F3F3F "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mission_explanation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:text="여행 장소에서 발견한 QR 코드를 인식하면 미션 성공!"
            android:textColor="#3F3F3F "
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/mission_qr_blue_box"
            android:orientation="horizontal"
            android:padding="18dp">

            <TextView
                android:id="@+id/mission_explanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증 기준"
                android:textColor="#848484" />

            <TextView
                android:id="@+id/mission_explanation_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:lineSpacingExtra="5sp"
                android:text="QR 코드를 인식한 위치와 QR 코드에 입력된  위치 정보 일치 여부 확인"
                android:textSize="13sp" />
        </LinearLayout>

        <Button
            android:id="@+id/placeCheckBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/mission_qr_place_box"
            android:text="6월 미션 장소 확인하기"
            android:textColor="#4F5A80 " />

    </LinearLayout>

    <Button
        android:id="@+id/missionStartBtn2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/trip_mission_btn"
        android:text="미션 시작하기"
        android:textColor="#414141"
        android:textSize="19sp"
        android:textStyle="bold" />

</LinearLayout>