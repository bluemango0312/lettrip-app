<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_daycount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="1일차"
        android:textColor="#4F5A80"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F5F9 "
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cityText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_round_box"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="2dp"
                android:paddingRight="16dp"
                android:paddingBottom="3dp"
                android:text="경상감영공원"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search_theme"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:paddingTop="3dp"
                android:paddingRight="7dp"
                android:paddingBottom="3dp"
                android:text="13시 00분"
                android:textAlignment="center"
                android:textColor="#93BEFF "
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="19dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/placeImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/image_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="11dp"
                android:layout_weight="0"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/costText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0원"
                    android:textColor="#838383 " />

                <RatingBar
                    android:id="@+id/ratingBar_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1"
                    style="?android:attr/ratingBarStyleIndicator"
                    />

                <TextView
                    android:id="@+id/detailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="클릭해서 상세후기 보러가기 →"
                    android:textColor="#838383 "
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="16dp"
        android:background="#BDBDBD" />

</LinearLayout>