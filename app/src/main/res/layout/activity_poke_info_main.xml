<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4F5A80"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingTop="20dp"
        android:paddingRight="18dp"
        android:paddingBottom="15dp">

        <ImageButton
            android:id="@+id/backBtn2"
            android:layout_width="19dp"
            android:layout_height="23dp"
            android:background="#4F5A80"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/left_arrow_icon" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:text="프로필"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="98dp"
        android:background="@drawable/profile_round_cut" />

    <TextView
        android:id="@+id/userNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/inter_bold"
        android:text="떵"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/uesrName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="박성화"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/userSex"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="4dp" />

        <TextView
            android:id="@+id/userBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="1998.04.03"
            android:textColor="#C0C0C0"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meetupSuccessNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:text="매칭 완료 2회"
            android:textColor="#9F9F9F"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/meetupFailNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:text="매칭 실패 1회"
            android:textColor="#9F9F9F"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="38dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/oneLineReivewIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/meetup_profile_one_line_review" />

        <TextView
            android:id="@+id/oneLineReviewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter"
            android:text="매칭 한 줄 평"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/arrowIcon1"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/right_arrow_gray" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="38dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/planningIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/planning_icon" />

        <TextView
            android:id="@+id/planningTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter"
            android:text="계획 글 보기"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/arrowIcon2"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/right_arrow_gray" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="38dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reviewIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/review_icon" />

        <TextView
            android:id="@+id/reviewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter"
            android:text="기록 글 보기"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/arrowIcon3"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/right_arrow_gray" />


    </LinearLayout>


</LinearLayout>